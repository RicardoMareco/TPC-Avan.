@model IEnumerable<BibliotecaComunitaria.Libro>

@{
    ViewBag.Title = "Libros";
}

<h2>Libros</h2>
@if (Request.IsAuthenticated)
{
<p>
    @Html.ActionLink("Crear Libro", "Create")
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edicion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaPublicacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadEjemplares)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadDisponible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor.NombreFantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editorial.NombreEditorial)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadEjemplares)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadDisponible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.NombreFantasia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editorial.NombreEditorial)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.LibroID }) 
            </td>
        </tr>
    }

</table>
