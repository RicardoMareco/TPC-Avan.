@model IEnumerable<BibliotecaComunitaria.Ciudad>

@{
    ViewBag.Title = "Index";
}

<h2>Ciudad</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
